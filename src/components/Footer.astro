---
import ThemePicker from './ThemePicker.astro';
---
<footer class="footer">
  <p>Made with &lt;3 by <a href="https://purduehackers.com" target="_blank" rel="noopener">Purdue Hackers</a></p>
  <nav>
    <a href="https://discord.gg/phack" target="_blank" rel="noopener">[Discord]</a>
    <a href="https://github.com/purduehackers" target="_blank" rel="noopener">[GitHub]</a>
  </nav>
  <div class="theme-wrapper">
    <ThemePicker />
  </div>
</footer>

<style>
  .footer {
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid var(--border);
    text-align: center;
  }

  .footer p {
    margin: 0 0 0.5rem;
  }

  nav {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  nav a {
    color: var(--accent);
  }

  .theme-wrapper {
    margin-top: 0.75rem;
    display: flex;
    justify-content: center;
  }
</style>
